root = true

[*]
charset = utf-8

# git config --global core.autocrlf input
end_of_line = lf

insert_final_newline = true
trim_trailing_whitespace = true

tab_width = 4
indent_size = 4
indent_style = space

max_line_length = 120

[*.go]
indent_style = tab

[*.{json,proto}]
tab_width = 2
indent_size = 2

[*.{ts,tsx,js,jsx,vue,css}]
tab_width = 2
indent_size = 2

[*.{yml,yaml}]
tab_width = 2
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
